<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        </RelativeLayout>

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/card_one"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/destination_card"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/card_destination" />

        <TextView
            android:id="@+id/card_destination"
            android:layout_width="181dp"
            android:layout_height="95dp"
            android:gravity="top|left"
            android:text="From here to there..."
            android:textAlignment="center"
            android:textColor="@android:color/background_light"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_below="@+id/reject"
            android:layout_alignEnd="@+id/card_one" />

            <TextView
                android:id="@+id/card_points"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="52dp"
                android:gravity="bottom|right"
                android:text="Points!"
                android:textColor="?android:attr/fastScrollTextColor"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="26dp"
                android:layout_alignBottom="@+id/card_one"
                android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/reject"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="101dp"
            android:layout_height="40dp"
            android:elevation="1dp"
            android:text="Reject"
            android:textSize="12sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    </RelativeLayout>

</FrameLayout>