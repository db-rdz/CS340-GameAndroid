<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ryanblaser.tickettoride.GUI.Views.LoginFragment">

    <RelativeLayout
        android:id="@+id/loginScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/editText_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:ems="10"
            android:hint="enter username"
            android:inputType="textPersonName"
            android:text="test" />

        <TextView
            android:id="@+id/textView_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_server"
            android:layout_alignBottom="@+id/editText_server"
            android:layout_alignLeft="@+id/textView_password"
            android:layout_alignStart="@+id/textView_password"
            android:text="Server:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textView_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_password"
            android:layout_alignBottom="@+id/editText_password"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:text="Password:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textView_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_username"
            android:layout_alignBottom="@+id/editText_username"
            android:layout_alignLeft="@+id/textView_password"
            android:layout_alignStart="@+id/textView_password"
            android:text="Username:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/textView_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/editText_port"
            android:layout_alignBottom="@+id/editText_port"
            android:layout_alignLeft="@+id/textView_server"
            android:layout_alignStart="@+id/textView_server"
            android:text="Server Port:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <EditText
            android:id="@+id/editText_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText_password"
            android:ems="10"
            android:hint="e.g. 192.168.1.172"
            android:inputType="textPersonName"
            android:text="192.168.1.112" />

        <EditText
            android:id="@+id/editText_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText_server"
            android:ems="10"
            android:hint="e.g. 8080"
            android:inputType="number"
            android:text="8081" />

        <Button
            android:id="@+id/button_login"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editText_port"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="33dp"
            android:contentDescription="Logs in the user to the app"
            android:elevation="0dp"
            android:text="LOG IN"
            android:visibility="visible" />

        <EditText
            android:id="@+id/editText_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/editText_username"
            android:ems="10"
            android:hint="enter password"
            android:inputType="textPassword"
            android:text="test" />

        <Button
            android:id="@+id/button_register"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/button_login"
            android:layout_alignStart="@+id/button_login"
            android:layout_below="@+id/button_login"
            android:contentDescription="Logs in the user to the app"
            android:elevation="0dp"
            android:text="REGISTER"
            android:visibility="visible" />
    </RelativeLayout>

</FrameLayout>
